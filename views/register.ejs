<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" placeholder="email">
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" placeholder="Abigail">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="lastName" placeholder="Sarne">
            </div>
            <div class="form-group">
                <label for="address">Street Address</label>
                <input class="form-control" type="text" name="address" placeholder="558 Sherwood St.">
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input class="form-control" type="text" name="city" placeholder="Robinhood">
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <input class="form-control" type="text" name="state" placeholder="Wisconsin">
            </div>
            <div class="form-group">
                <label for="zipCode">zipCode</label>
                <input class="form-control" type="number" name="zipCode" placeholder="54015">
            </div>
            <div class="form-group">
                <label for="avator">Profile Picture</label>
                <input type="file" id="avator" name="avatar" accept="image/*" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a class="btn btn-lg btn-primary btn-block" href="/">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>