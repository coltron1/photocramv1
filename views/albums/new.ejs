<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New Album</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/albums" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="album[name]" placeholder="name">
                </div>
<a href="#" id="upload_widget_opener">Upload multiple images</a>

                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="album[image]" accept="image/*" multiple required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/albums">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>